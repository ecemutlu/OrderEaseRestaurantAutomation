@model DummyDataRepos
@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- fontfamily css-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <div class="row justify-content-center align-items-center inner-row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-header text-center">
                    <h2 class="fw mb-3">Login</h2>
                </div>
                <div class="card-body">
                    <form method="post" action="/Home/Login">
                        @Html.AntiForgeryToken()
                        <div class="form-group text-decoration-none mb-20">
                            Username/Email
                        </div>
                        <div class="form-group text-md-center mt-10 mb-20">
                            <input class="form-control" placeholder="Username or Email" name="username" />
                        </div>
                        <div class="form-group text-decoration-none mb-20">
                            Password
                        </div>
                        <div class="form-group text-md-center mt-10 mb-20">
                            <input class="form-control" placeholder="Password" name="password" type="password" />
                        </div>
                        <hr />
                        <div class="d-grid gap-2 col-6 mx-auto">
                            <button class="btn btn-warning btn-block w-100" style="color:white" type="submit">Login</button>
                        </div>
                        @if (ViewData.ModelState.TryGetValue("LoginError", out var errorList) && errorList.Errors.Count > 0)
                        {
                            <div class="alert alert-danger" role="alert">
                                @foreach (var error in errorList.Errors)
                                {
                                    <span>@error.ErrorMessage</span>

                                    <br />
                                }
                            </div>
                        }

                    </form>
                    <div class="form-group text-decoration-none text-center mb-3">
                        <p class="p-0 m-0">
                            Don't have an account?
                            <a class="btn border-0 p-3 pb-3" href="/Home/Register" style="color:orange; font-size: 18px!important;">Sign Up</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
