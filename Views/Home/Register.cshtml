@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- fontfamily css-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
<div class="row justify-content-center align-items-center inner-row">
    <div class="col-md-5">
        <div class="card">
            <div class="card-header text-center">
                <h2 class="fw mb-3">Create a new account</h2>
            </div>
            <div class="card-body">
                <div class="form-group text-decoration-none mb-20">
                    Username/Email
                </div>
                <div class="form-group text-md-center mt-10 mb-20">
                    <input class="form-control" placeholder="Username or Email" name="username" />
                </div>
                <div class="form-group text-decoration-none mb-20">
                    Password
                </div>
                <div class="form-group text-md-center mt-10 mb-20">
                    <input class="form-control" placeholder="Password" name="password" type="password" />
                </div>
                <div class="form-group text-decoration-none mb-20">
                    Enter your password again
                </div>
                <div class="form-group text-md-center mt-10 mb-20">
                    <input class="form-control" placeholder="Password" name="password" type="password" />
                </div>
                <div class="form-group text-decoration-none mb-20">
                    Phone Number
                </div>
                <div class="form-group text-md-center mt-10 mb-20">
                    <input class="form-control" placeholder="Phone Number" name="phoneNumber" type="number" />
                </div>
                <hr />
                <div class="d-grid gap-2 col-6 mx-auto">
                    <button href="/Home/MainPage" class="btn btn-warning btn-block w-100" style="color:white">Register</button>
                </div>
                <div class="form-group text-decoration-none text-center mb-3">
                    <row class="p-0 m-0">
                         Have an account?
                        <a class="btn border-0 p-3 pb-3" href="/Home/Login" style="color:orange; font-size: 18px!important;">Sign In</a>
                    </row>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>

